
.footer-promotion-wrapper{
  display:inline-block;
  margin-bottom:1em;
  padding:10px;
  background-color:#ececec;
}
.footer-promotion-wrapper p:not(:last-child){
  margin-bottom:5px;
}

.checkout__footer__shipping-icons{
  margin-top: 15px;
}
.checkout__footer__shipping-icons:after{
  content:'';
  clear:both;
  display:block;
}
.checkout__footer__shipping-icons .checkout__footer__shipping-icons__block {
  width: 50%;
  float: left;
  text-align: center;
  margin-bottom:30px;
}
.checkout__footer__shipping-icons .checkout__footer__shipping-icons__block p{
  font-size: 0.9em;
}