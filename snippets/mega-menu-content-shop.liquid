{%- assign _full_width_class = '' -%}
{%- if _submenu_w == '100%' or _submenu_w == '300%' or _submenu_w == '338%' or _submenu_w == '1230px' -%}
{%- assign _full_width_class = 'full-width-sub-menu' -%}
{%- endif -%}
{% assign ext_cat = next_block.settings.shop_ex_cat | split: "; " %}
{% assign int_cat = next_block.settings.shop_int_cat | split: "; " %}
{% assign pt_cat = next_block.settings.shop_pt_cat | split: "; " %}
{% assign acc_cat = next_block.settings.shop_acc_cat | split: "; " %}
{% assign bt_cat = next_block.settings.shop_bt_cat | split: "; " %}

{% assign ext_link = next_block.settings.shop_ex_link | split: "; " %}
{% assign int_link = next_block.settings.shop_int_link | split: "; " %}
{% assign pt_link = next_block.settings.shop_pt_link | split: "; " %}
{% assign acc_link = next_block.settings.shop_acc_link | split: "; " %}
{% assign bt_link = next_block.settings.shop_bt_link | split: "; " %}

<div class="{{_full_width_class}} mobile-enabled">

    <ul class="shopify-tabs">
        <li class="current" data-tab="tab-brand">Brands</li>
        <li data-tab="tab-ex">Exterior</li>
        <li data-tab="tab-int">Interior</li>
        <li data-tab="tab-paint">Paint Correction</li>
        <li data-tab="tab-acc">Accessories</li>
        <li data-tab="tab-boat">Boat & RV</li>
    </ul>
    <div id="tab-brand" class=" {{_full_width_class}} shopify-tab-content current">

        {% for collection in collections %}
        {% if collection.title contains 'Brand' %}
        <div class='col-sm-3 mobile-enabled'>
            <div class="row m-0">
                <a class='smenu' href="{{ collection.url }}"> {{ collection.title | remove: "Brand:" }}</a>
            </div>
        </div>
        {% endif %}
        {% endfor %}

    </div>
    <div id="tab-ex" class="{{_full_width_class}} shopify-tab-content">
        <div class="tabvet">
            {% for e in ext_cat %}
            <button class="tablinks" onclick="openCity(event, 'c{{forloop.index}}')">{{e}}</button>
            {% endfor %}
        </div>
        {% for e in ext_cat %}
        <div id="c{{forloop.index}}" class="tabvetcontent">
            <h3>{{e}}</h3>
            <p>{{e}}</p>
        </div>
        {% endfor %}

    </div>
    <div id="tab-int" class="{{_full_width_class}} shopify-tab-content">
        <div class="tabvet">
            <button class="tablinks" onclick="openCity(event, 'London')">London</button>
            <button class="tablinks" onclick="openCity(event, 'Paris')">Paris</button>
            <button class="tablinks" onclick="openCity(event, 'Tokyo')">Tokyo</button>
        </div>

        <div id="London" class="tabvetcontent active">
            {% for product in collections.Interior.products %}
            {{ product.title }}
            {% endfor %}

            <div id="Paris" class="tabvetcontent">
                <h3>Paris</h3>
                <p>Paris is the capital of France.</p>
            </div>

            <div id="Tokyo" class="tabvetcontent">
                <h3>Tokyo</h3>
                <p>Tokyo is the capital of Japan.</p>
            </div>
        </div>
        <div id="tab-paint" class="{{_full_width_class}} shopify-tab-content">
            {% for e in pt_cat %}
            {{ e }}
            {% endfor %}
        </div>
        <div id="tab-acc" class="{{_full_width_class}} shopify-tab-content">
            {% for e in acc_cat %}
            {{ e }}
            {% endfor %}
        </div>
        <div id="tab-boat" class="{{_full_width_class}} shopify-tab-content">
            {% for e in bt_cat %}
            {{ e }}
            {% endfor %}
        </div>
    </div>
</div>



{% style %}
ul.shopify-tabs {
margin-right: 15px;
padding: 0px;
list-style: none;
}
ul.shopify-tabs > li{
background: none;
color: #333;
display: inline-block;
padding: 10px 15px;
cursor: pointer;
font-family: "Langdon Regula" ,sans-serif !important;
line-height: 1.5;
font-size:18px;
font-weight:bold;
letter-spacing: 1px;
}
ul.shopify-tabs > li.current{
background: #ffffff;
color: #E05946;
}
.shopify-tab-content{
display: none;
background: #ffffff;
padding: 15px;
}
.shopify-tab-content.current{
display: block;
}

.smenu {
display: block;
position: relative;
margin: 0;
padding: 5px 10px 8px;
font-size: 14px;
font-weight: 600;
}
@media only screen and (max-width: 600px) {
  .smenu{
    border-bottom: 1px solid lightgrey;
	}
}
.bg{
background:#E4E5E7
}


/* Style the tab */
.tabvet {
  background-color: #f1f1f1;
  width: 30%;
  padding:10px;
}

@media only screen and (max-width: 600px) {
  .tabvet {
    width: 100%;
    padding:0;
    border:0;
  }
}

/* Style the buttons that are used to open the tab content */
.tabvet button {
  display: block;
  background-color: inherit;
  color: black;
  padding: 5px 0px;
  width: 100%;
  border: none;
  outline: none;
  text-align: left;
  cursor: pointer;
  transition: 0.3s;
  border-bottom: 1px solid lightgrey;
}

/* Change background color of buttons on hover */
.tabvet button:hover {
background-color: #ddd;
}

/* Create an active/current "tab button" class */
.tabvet button.active {
color: #E05946;
}

/* Style the tab content */
.tabvetcontent {
  float: left;
  padding: 0px 12px;
  width: 70%;
  border-left: none;
}

@media only screen and (max-width: 600px) {
  .tabvetcontent {
    width: 100%;
    padding: 5px 5px;
    margin:0 !important;
    font-weight: 600;
    font-size: 14px;
    font-family: "Langdon Regula" ,sans-serif !important;
  }

  .tabvetcontent .row {
    margin:0 !important;
  }
}
{% endstyle %}
