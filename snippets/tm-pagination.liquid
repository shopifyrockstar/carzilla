{%- if paginate.items > 0 -%}
<div class="row tm-pagination">
  <div class="col-sm-6 text-left">
    {%- if paginate.pages > 1 -%}
    <ul class="tm-pagination__list u-list-reset">
      <li class="tm-pagination__previous u-pseudo">
        {%- if paginate.previous -%}
          <a class="tm-pagination__link t-red" href="{{paginate.previous.url}}">&lt;</a>
        {%- else -%}
          <span class="tm-pagination__link t-grey" href="{{paginate.previous.url}}">&lt;</span>
        {%- endif -%}
      </li>

        <li class="tm-pagination__current">{{ paginate.current_page }}</li>

      {% comment %}
      {%- for part in paginate.parts -%}
        {%- if part.is_link -%}
          <li><a href="{{part.url}}">{{part.title}}</a></li>
        {%- else -%}
          {%- if part.title == '&hellip;' -%}
            <li class="ellipsis"><span>{{part.title}}</span></li>
          {%- else -%}
            <li class="tm-pagination__current active"><span>{{part.title}}</span></li>
          {%- endif -%}
        {%- endif -%}
      {%- endfor -%}
      {% endcomment %}

      <li class="tm-pagination__next u-pseudo">
        {%- if paginate.next -%}
          <a class="tm-pagination__link t-red" href="{{paginate.next.url}}">&gt;</a>
        {%- else -%}
          <span class="tm-pagination__link t-grey" href="{{paginate.next.url}}">&gt;</span>
        {%- endif -%}
      </li>
    </ul>
    {%- endif -%}
  </div>
  <div class="col-sm-6 text-right">
    <span class="tm-pagination__info">
      {{'general.pagination.showing' | t}}: {{paginate.current_offset | plus:1}}-{%- if paginate.next -%}{{paginate.current_offset | plus:paginate.page_size}}{%- else -%}{{paginate.items}}{%- endif -%}{{' '}}{{'general.pagination.of' | t}}{{' '}}{{paginate.items}}
    </span>
  </div>
</div>
{%- endif -%}
